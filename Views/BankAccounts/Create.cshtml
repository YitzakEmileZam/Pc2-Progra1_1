@model BankApp.Models.BankAccount

<h2>Abrir Nueva Cuenta Bancaria</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="AccountHolderName">Nombre del Titular</label>
        <input class="form-control" asp-for="AccountHolderName" />
    </div>
    <div class="form-group">
        <label for="AccountType">Tipo de Cuenta</label>
        <input class="form-control" asp-for="AccountType" />
    </div>
    <div class="form-group">
        <label for="InitialBalance">Saldo Inicial</label>
        <input class="form-control" asp-for="InitialBalance" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <button type="submit" class="btn btn-primary">Crear Cuenta</button>
</form>
